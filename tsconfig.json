{
  "compilerOptions": {
    "outDir": "generators",
    "rootDir": "src",
    "module": "NodeNext", // Set to NodeNext for ES module support
    "moduleResolution": "NodeNext", // Must match 'module'
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "generators"]
}
